<!DOCTYPE html>
<html>
<head>
    <title>Circle Radius and Area Calculator</title>
</head>
<body>
    <h1>Circle Radius and Area Calculator</h1>
    
    <label for="radius">Enter the radius of the circle: </label>
    <input type="number" id="radius">
    <button onclick="calculateCircleArea()">Calculate</button>
    
    <p>Radius of the circle: <span id="resultRadius"></span></p>
    <p>Area of the circle: <span id="resultArea"></span></p>

    <script>
        function calculateCircleArea() {
            // Get the radius input value
            var radius = parseFloat(document.getElementById("radius").value);

            // Calculate the area
            var area = Math.PI * Math.pow(radius, 2);

            // Display the results
            document.getElementById("resultRadius").textContent = radius;
            document.getElementById("resultArea").textContent = area.toFixed(2);
        }
    </script>
</body>
</html>
